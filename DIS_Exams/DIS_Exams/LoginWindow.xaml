<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIS_Exams"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" x:Class="DIS_Exams.LoginWindow"
    
        mc:Ignorable="d"
        Title="Программа для решения экзаменов (Login)" Height="250" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Logo.png" Background="#FFF0F0F0">
    <Grid Margin="0,0,0,-16">
        <TextBox x:Name="studentName" HorizontalAlignment="Left" Margin="102,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Height="23" TextAlignment="Justify"/>
        <TextBox x:Name="className" HorizontalAlignment="Left" Margin="102,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Height="23" TextAlignment="Justify"/>
        <Label Content="Ф.И.О" HorizontalAlignment="Left" Margin="55,30,0,0" VerticalAlignment="Top" Width="47" FontWeight="Bold"/>
        <Label Content="Класс" HorizontalAlignment="Left" Margin="55,58,0,0" VerticalAlignment="Top" Width="47" FontWeight="Bold"/>
        <ComboBox x:Name="fileChoose" HorizontalAlignment="Left" Margin="102,111,0,0" VerticalAlignment="Top" Width="338" Height="22">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Экзамен" HorizontalAlignment="Left" Margin="41,109,0,0" VerticalAlignment="Top" Width="61" FontWeight="Bold" RenderTransformOrigin="0.522,0.545"/>
        <Button x:Name="Button_Start" Content="Начать" HorizontalAlignment="Center" Margin="0,171,0,0" VerticalAlignment="Top" Width="136" FontSize="14" Click="Button_Start_Click" Background="#FF112955" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
